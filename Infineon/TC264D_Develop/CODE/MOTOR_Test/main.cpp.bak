#include "main.h"
Servo_Param Servo_param{
    ATOM0_CH1_P33_9,
    50,
    2.12,
    0.92,
    1.563,
    1.320,
    100,
    0
};

MOTOR_Param LM_Param{
    ATOM0_CH4_P02_4,
    ATOM0_CH5_P02_5,
    MOTOR_Direction_1,
    17000,
    50
};

MOTOR_Param RM_Param{
    ATOM0_CH6_P02_6,
    ATOM0_CH7_P02_7,
    MOTOR_Direction_1,
    17000,
    50
};

Servo servo = Servo(Servo_param);
//左右电机,只有类,后面做成模块的时候可以省略参数。
MOTOR left_motor = MOTOR(LM_Param);
MOTOR right_motor = MOTOR(RM_Param);
void setup ()
{
    servo.Init();
    left_motor.Init();
    right_motor.Init();
    left_motor.Run(20);
    right_motor.Run(20);
}
void loop ()
{
    //loop不能为空，否则会锁线程
    rt_thread_mdelay(1);
}

